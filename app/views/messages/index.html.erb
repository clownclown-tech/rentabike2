<h1>received Messages</h1>
<% if @rmessages.blank? %>
    <p>No received messages, sent a message, even to yourself</p>
    <a class="btn btn-light" href="/messages/new">sent a message</a>
<% else %>

<table>
  <thead>
    <tr>
      <th>Subject</th>
      <th>Body</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @rmessages.each do |message| %>
      <tr>
        <td><%= message.subject %></td>
        <td><%= message.body %></td>
        <%#= link_to 'Show', message %>
        <td><%= link_to 'answer', new_message_path %></td>
        <td><%= link_to "delete", message_path(message), method: :delete, data: { confirm: "Are you sure you want to delete this message?" } %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<h1>sent Messages</h1>
<% if @smessages.blank? %>
    <p>No sent messages, sent a message, even to yourself</p>
    <a class="btn btn-light" href="/messages/new">sent a message</a>
<% else %>

<table>
  <thead>
    <tr>
      <th>Subject</th>
      <th>Body</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @smessages.each do |message| %>
      <tr>
        <td><%= message.subject %></td>
        <td><%= message.body %></td>
        <%#= link_to 'Show', message %>
        <td><%= link_to 'answer', new_message_path %></td>
        <td><%= link_to "delete", message_path(message), method: :delete, data: { confirm: "Are you sure you want to delete this message?" } %></td>

      </tr>
    <% end %>
  </tbody>
</table>
<% end %>

<br>

<%= link_to 'New Message', new_message_path %>
<% end %>


<style>
h1 {
  color: #ffa500;
  text-align: center;
  font-size: 2em;
}

table {
  border-collapse: collapse;
  width: 100%;
  margin: 2em auto;
}

td, th {
  border: 1px solid #ddd;
  padding: 8px;
}

tr:nth-child(even) {
  background-color: #f2f2f2;
}

tr:hover {
  background-color: #ddd;
}

th {
  padding-top: 12px;
  padding-bottom: 12px;
  text-align: left;
  background-color: #4caf50;
  color: white;
}

.btn {
  background-color: #4caf50;
  color: white;
  padding: 12px 20px;
  border: none;
  cursor: pointer;
  width: 100%;
  font-size: 18px;
}

.btn:hover {
  opacity: 0.8;
}

</style>
