<h1>received Messages</h1>
<% if @rmessages.blank? && @smessages.blank? %>
    <p>No received messages, sent a message, even to yourself</p>
    <a class="btn btn-light" href="/messages/new">sent a message</a>
<% else %>

<table>
  <thead>
    <tr>
      <th>Subject</th>
      <th>Body</th>
      <th>sent by:</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @rmessages.each do |message| %>
      <tr>
        <td><%= message.subject %></td>

        <td><%= message.body %> <%= button_to "View Message", message_path(message), method: :get %></td>



        <td><%= message.sender %></td>
        <%#= link_to 'Show', message %>
        <td><%= link_to 'answer', new_message_path(message_value: message.sender) %></td>
        <td><%= link_to "delete", message_path(message), method: :delete, data: { confirm: "Are you sure you want to delete this message?" } %></td>

      </tr>

<%= yield %>
<%= yield :javascript %>
    <% end %>
  </tbody>
</table>

<h1>sent Messages</h1>
<% if @smessages.blank? %>
    <p>No sent messages, sent a message, even to yourself</p>
    <a class="btn btn-light" href="/messages/new">sent a message</a>
<% else %>

<table>
  <thead>
    <tr>
      <th>Subject</th>
      <th>Body</th>
      <th>sent to:</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @smessages.each do |message| %>
      <tr>
        <td><%= message.subject %></td>
        <td><%= message.body %><%= button_to "View Message", message_path(message), method: :get %></td>
        <%#= link_to 'Show', message %>
        <td><%= message.receiver %></td>
        <td><%= link_to "delete", message_path(message), method: :delete, data: { confirm: "Are you sure you want to delete this message?" } %></td>

      </tr>
    <% end %>
  </tbody>
</table>
<% end %>

<br>

<%= link_to 'New Message', new_message_path, class: 'btn' %>

<% end %>


<style>
h1 {
  color: darkgray;
  font-size: 24px;
  padding: 10px;
}

table {
  width: 90%;
  margin: 1em auto;
}

td, th {
  border: 1px solid #ddd;
  padding: 5px;
}

tr:nth-child(even) {
  background-color: #f2f2f2;
}

tr:hover {
  background-color: #ddd;
}

th {
  padding-top: 12px;
  padding-bottom: 12px;
  text-align: left;
  background-color: darkgray;
  color: white;
}

.btn {
  display: block;
  margin: auto;
  background-color: darkgray;
  color: white;
  border: none;
  cursor: pointer;
  width: 75%;
  font-size: 18px;
}

.btn:hover {
  opacity: 0.8;
}

a:hover {
  color: black;
}

/* Styles for the pop-up window */
.popup-window {
  background-color: white;
  border: 1px solid #ccc;
  box-shadow: 2px 2px 10px rgba(0,0,0,0.5);
  display: none; /* Initially, the pop-up window is hidden */
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 999;
}

/* Animation to fade in the pop-up window */
@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

/* Apply the fadeIn animation to the pop-up window */
.popup-window.fade-in {
  animation: fadeIn 0.5s;
  display: block; /* Show the pop-up window when the animation is finished */
}

</style>
